            text="Start"
            color="0x000000FF"
            focusTextColor="0xFFFFFFFF"
            width="200"
            height="50"
            horizAlign="center"
            vertAlign="center"
          />
        </LayoutGroup>
        <LayoutGroup id="settings" focusable="true" width="200" height="50">
          <Poster
            uri="pkg:/images/button_normal.png"
            focusBitmapUri="pkg:/images/button_focused.png"
            width="200"
            height="50"
          />
          <Label
            text="Settings"
            color="0x000000FF"
            focusTextColor="0xFFFFFFFF"
            width="200"
            height="50"
            horizAlign="center"
            vertAlign="center"
          />
        </LayoutGroup>
        <LayoutGroup id="exitgame" focusable="true" width="200" height="50">
          <Poster
            uri="pkg:/images/button_normal.png"
            focusBitmapUri="pkg:/images/button_focused.png"
            width="200"
            height="50"
          />
          <Label
            text="Exit"
            color="0x000000FF"
            focusTextColor="0xFFFFFFFF"
            width="200"
            height="50"
            horizAlign="center"
            vertAlign="center"
          />
        </LayoutGroup>
      </LayoutGroup>
    </LayoutGroup>
  </children>
</component>