  <children>
    <Poster
      id="titlescreenbg"
      uri="pkg:/images/tscreenbg.png"
      width="1280"
      height="720"
      visible="true"
    />
    <LayoutGroup id="mainLayout" translation="[0, 0]">
      <Label
        translation="[0, -260]"
        id="AppTitle"
        color="0x000000"
        text="Language Leap"
        horizAlign="center"
      />
      <LayoutGroup id="MainMenu" translation="[0, 0]" itemSpacing="20" horizAlign="center">
        <LayoutGroup id="startgame" focusable="true" width="200" height="50">
          <Poster
            uri="pkg:/images/button_normal.png"
            focusBitmapUri="pkg:/images/button_focused.png"
            width="200"
            height="50"
          />
